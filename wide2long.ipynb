# Importem llibreries
import pandas as pd
from google.colab import files

# === 1. Permet l'usuari pujar CSV ===
uploaded = files.upload()  # Obrirà el selector de fitxer

# Agafem el nom del fitxer pujat
file_name = list(uploaded.keys())[0]

# Llegim CSV
df = pd.read_csv(file_name)

# === 2. Convertim 'date' a datetime ===
df['date'] = pd.to_datetime(df['date'], format='%Y-%m-%d %H:%M:%S', errors='coerce')

# === 3. Convertim de wide a long ===
df_long = df.melt(
    id_vars=['date'],       # columna que es manté
    var_name='pollutant',   # nova columna amb els noms de les columnes originals
    value_name='value'      # nova columna amb els valors
)

# === 4. Guardem CSV long i preparem per descarregar ===
output_file = "data_long.csv"
df_long.to_csv(output_file, index=False)

# Permet a l'usuari descarregar
files.download(output_file)

print("CSV convertit a long i preparat per descarregar com 'data_long.csv'.")
